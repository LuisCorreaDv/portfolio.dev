---
import Badge from "../components/Badge.astro";
import LinkedIn from "../icons/LinkedIn.astro";
import Layout from "../layouts/Layout.astro";
import SocialPill from "../components/SocialPill.astro";
import GitHub from "../icons/GitHub.astro";
import Mail from "../icons/Mail.astro";
import Experience from "../components/Experience.astro";
import Briefcase from "../icons/Briefcase.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Code from "../icons/Code.astro";
import Projects from "../components/Projects.astro";
---

<Layout>
  <main class="md:w-[768px] lg:px-4 md:px-6">
    <!-- Header -->
    <SectionContainer class="py-28 pb-24">
      <div class="flex flex-row items-center gap-4">
        <img
          class="rounded-full size-14 sm:display-block mb-4 md:mb-0"
          src="https://gravatar.com/avatar/ef7dcea8fa46a2bc6fed720691529b9c?s=400&d=retro&r=x"
          alt="profile logo"
        />
        <Badge>Disponible para trabajar</Badge>
      </div>
      <h1
        class="text-[#332E3C] text-4xl md:text-4xl lg:text-5xl font-bold my-4"
      >
        Hola, soy Luis
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span class="text-[#3e4979] font-bold opacity-90"
          >Estudiante de Ingeniería en Sistemas Computacionales.</span
        > Apasionado por el desarrollo web. <span
          class="text-[#37437c] font-semibold"
          >Ubicado en Toluca, México.</span
        > Experiencia en React, Tailwind CSS y JavaScript
      </h2>
      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill href="https://www.linkedin.com/in/luiscorrea-v/">
          <LinkedIn class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/LuisCorreaDv">
          <GitHub class="size-4 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="mailto:dev.luis.correa@gmail.com">
          <Mail class="size-4 md:size-6" />
          Correo
        </SocialPill>
      </nav>
    </SectionContainer>

    <!-- Section de experiencia laboral -->
    <SectionContainer id="experiencia" class="pb-24">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <Briefcase class="size-7" />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>

    <!-- Section de Proyectos -->
    <SectionContainer id="proyectos">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <Code class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>
