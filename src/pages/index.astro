---
import Badge from "../components/Badge.astro";
import LinkedIn from "../icons/LinkedIn.astro";
import Layout from "../layouts/Layout.astro";
import SocialPill from "../components/SocialPill.astro";
import GitHub from "../icons/GitHub.astro";
import Mail from "../icons/Mail.astro";
import Experience from "../components/Experience.astro";
import Briefcase from "../icons/Briefcase.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Code from "../icons/Code.astro";
import Projects from "../components/Projects.astro";

---

<Layout>
  <main class="md:w-[768px] px-4">
    <!-- Header -->
    <SectionContainer class="py-44 pb-24">
      <h1 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">
        Hey, soy Luis <a
          href="https://www.linkedin.com/in/luiscorrea-v/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span class="text-yellow-200/90 opacity-80"
          >Estudiante de Ingeniería en Sistemas Computacionales.</span
        > Apasionado por el desarrollo web. <span class="text-red-200/90"
          >Ubicado en Toluca, México.</span
        > Experiencia en React, Tailwind CSS y JavaScript
      </h2>
      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill href="https://www.linkedin.com/in/luiscorrea-v/">
          <LinkedIn class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/LuisCorreaDv">
          <GitHub class="size-4 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="mailto:dev.luis.correa@gmail.com">
          <Mail class="size-4 md:size-6" />
          Correo
        </SocialPill>
      </nav>
    </SectionContainer>

    <!-- Section de experiencia laboral -->
    <SectionContainer id="experiencia" class="pb-24">
      <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
        <Briefcase class="size-7" />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>

      <!-- Section de Proyectos -->
      <SectionContainer id="proyectos">
        <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
          <Code class="size-7" />
          Proyectos
        </h2>
        <Projects />
      </SectionContainer>
  </main>
</Layout>
