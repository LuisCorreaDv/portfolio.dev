---
import HTML from "../icons/HTML.astro"
import CSS from "../icons/CSS.astro"

const TAGS = {
    HTML: {
        name: "HTML5",
        class: "bg-orange-400/80 text-white",
        icon: HTML,
    },
    CSS: {
        name: "CSS3",
        class: "bg-blue-400/80 text-white",
        icon: CSS,
    },

}

const projects = [
    {
        title: "Blog Preview Card",
        description: "Blog preview card challenge",
        link: "https://blog-preview-card-challenge-black.vercel.app/",
        image: "/Images/BlogPreview.webp",
        github: "https://github.com/LuisCorreaDv/Blog-preview-card-challenge",
        tags: [TAGS.HTML, TAGS.CSS],
    },
]
---

{
    projects.map(({title, description, link, image, github, tags}) => {
        return (<article>
            <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-2">
                {tags.map(tag => (
                    <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                        <tag.icon class="size-4" />
                        <li>{tag.name}</li>
                    </span>
                ))}
            </ul>
            <img class="rounded shadow-2xl shadow-white/10" src={image} alt="Captura de pantalla del proyecto" />
        </article>
        )
    })
}